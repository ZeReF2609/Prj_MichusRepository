@using Michus.Models_Store
@model List<ClienteCompleto>
@{
    ViewData["Title"] = "Lista de Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<link rel="stylesheet" href="~/assets/css/vistasBootstrap.css">
<div class="container-fluid">
    <main class="py-2">

        <div class="mb-4">
            <div class="row g-3">
                <!-- Filtro Código -->
                <div class="col-md-3">
                    <label for="filtroCodigo" class="form-label">Código</label>
                    <input type="text" class="form-control form-control-sm" id="filtroCodigo" placeholder="Filtrar por código">
                </div>

                <!-- Filtro Nombre -->
                <div class="col-md-3">
                    <label for="filtroNombre" class="form-label">Nombre</label>
                    <input type="text" class="form-control form-control-sm" id="filtroNombre" placeholder="Filtrar por nombre">
                </div>

                <!-- Filtro Estado -->
                <div class="col-md-3">
                    <label for="filtroEstado" class="form-label">Estado</label>
                    <select class="form-select form-select-sm" id="filtroEstado">
                        <option value="">Todos</option>
                        <option value="1">Activo</option>
                        <option value="0">Inactivo</option>
                    </select>
                </div>

                <!-- Filtro Rol -->
                <div class="col-md-3">
                    <label for="filtroRol" class="form-label">Rol</label>
                    <select class="form-select form-select-sm" id="filtroRol">
                        <option value="">Todos</option>
                        <option value="1">Administrador</option>
                        <option value="2">Cliente</option>
                    </select>
                </div>
            </div>
        </div>
        <!-- Botón para abrir el modal de insertar cliente -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#insertarModal">
            Insertar Cliente
        </button>

        <div class="table-responsive" style="margin-top: 20px;">
            <table id="clientesTable" class="table table-striped table-bordered display table-sm">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>DNI</th>
                        <th>Nacimiento</th>
                        <th>Registro</th>
                        <th>Nivel</th>
                        <th>Puntos</th>
                        <th>Teléfono</th>
                        <th>Dirección</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var clienteData in Model)
                    {
                        <tr>
                            <td>@clienteData.Cliente.IdCliente</td>
                            <td>@clienteData.Cliente.Nombres</td>
                            <td>@clienteData.Cliente.Apellidos</td>
                            <td>@clienteData.Cliente.DocIdent</td>
                            <td>@clienteData.Cliente.FechaNacimiento.ToString("dd/MM/yyyy")</td>
                            <td>@clienteData.Cliente.FechaRegistro?.ToString("dd/MM/yyyy")</td>
                            <td>@clienteData.Cliente.NivelFidelidad</td>
                            <td>@clienteData.Cliente.PuntosFidelidad</td>
                            <td>@clienteData.Contacto.Telefono</td>
                            <td>@clienteData.Contacto.Direccion</td>
                            <td>
                                <button class="btn btn-link p-0" id="estadoBtn_@clienteData.Cliente.IdCliente" data-bs-toggle="modal" data-bs-target="#confirmModal" title="Cambiar estado">
                                    @if (clienteData.Sistema.Estado == 1)
                                    {
                                        <i class="bi bi-check-circle text-success" title="Activo"></i> <!-- Icono de activo -->
                                    }
                                    else
                                    {
                                        <i class="bi bi-x-circle text-danger" title="Inactivo"></i> <!-- Icono de inactivo -->
                                    }
                                </button>
                            </td>
                            <td>
                                <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editarModal" data-id="@clienteData.Cliente.IdCliente">
                                    <i class="bi bi-pencil"></i> Editar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        

        <!-- Modal para registrar-->
        <div class="modal fade" id="insertarModal" tabindex="-1" aria-labelledby="insertarModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="insertarModalLabel">Insertar Cliente</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <!-- Imagen decorativa -->
                            <div class="col-md-3 text-center mb-4">
                                <img src="~/assets/img/mishus.png" alt="Imagen decorativa" class="img-fluid" style="max-height: 70px;">
                            </div>
                            <!-- Inputs a la derecha de la imagen -->
                            <div class="col-md-9">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label for="USUARIO" class="form-label">Usuario</label>
                                        <input type="text" class="form-control" id="USUARIO" name="USUARIO" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="CONTRASENIA" class="form-label">Contraseña</label>
                                        <input type="password" class="form-control" id="CONTRASENIA" name="CONTRASENIA" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Inputs debajo de la imagen -->
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="EMAIL" class="form-label">Email</label>
                                <input type="email" class="form-control" id="EMAIL" name="EMAIL" required>
                            </div>
                            <div class="col-md-6">
                                <label for="NOMBRES" class="form-label">Nombres</label>
                                <input type="text" class="form-control" id="NOMBRES" name="NOMBRES" required>
                            </div>
                            <div class="col-md-6">
                                <label for="APELLIDOS" class="form-label">Apellidos</label>
                                <input type="text" class="form-control" id="APELLIDOS" name="APELLIDOS" required>
                            </div>
                            <div class="col-md-6">
                                <label for="DIRECCION" class="form-label">Dirección</label>
                                <input type="text" class="form-control" id="DIRECCION" name="DIRECCION">
                            </div>
                            <div class="col-md-6">
                                <label for="TELEFONO" class="form-label">Teléfono</label>
                                <input type="text" class="form-control" id="TELEFONO" name="TELEFONO">
                            </div>
                        </div>
                        <!-- Selección de tipo de documento y DNI -->
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="DNI" class="form-label">Tipo de Documento</label>
                                <select class="form-select" id="DNI" name="DNI" required>
                                    <!-- Aquí se llenarán los tipos de documento -->
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="DOCUMENTO_IDENTIDAD" class="form-label">Documento de Identidad</label>
                                <input type="text" class="form-control" id="DOCUMENTO_IDENTIDAD" name="DOCUMENTO_IDENTIDAD" required>
                            </div>
                            <div class="col-md-6">
                                <label for="FECHA_NACIMIENTO" class="form-label">Fecha de Nacimiento</label>
                                <input type="date" class="form-control" id="FECHA_NACIMIENTO" name="FECHA_NACIMIENTO">
                            </div>
                            <div class="col-md-6">
                                <label for="NIVEL_FIDELIDAD" class="form-label">Nivel de Fidelidad</label>
                                <input type="number" class="form-control" id="NIVEL_FIDELIDAD" name="NIVEL_FIDELIDAD">
                            </div>
                            <div class="col-md-6">
                                <label for="PUNTOS_FIDELIDAD" class="form-label">Puntos de Fidelidad</label>
                                <input type="number" class="form-control" id="PUNTOS_FIDELIDAD" name="PUNTOS_FIDELIDAD">
                            </div>
                        </div>
                        <div class="mt-4 text-center">
                            <button type="submit" class="btn btn-primary" id="guardarCliente">Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal para editar cliente -->
        <div class="modal fade" id="editarModal" tabindex="-1" aria-labelledby="editarModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editarModalLabel">Editar Cliente</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <!-- Formulario para editar cliente -->
                        <div class="row">
                            <!-- Aquí irán los campos a editar -->
                            <div class="col-md-6">
                                <label for="EDIT_NOMBRES" class="form-label">Nombres</label>
                                <input type="text" class="form-control" id="EDIT_NOMBRES" name="EDIT_NOMBRES">
                            </div>
                            <div class="col-md-6">
                                <label for="EDIT_APELLIDOS" class="form-label">Apellidos</label>
                                <input type="text" class="form-control" id="EDIT_APELLIDOS" name="EDIT_APELLIDOS">
                            </div>
                            <!-- Más campos de edición aquí... -->
                        </div>
                        <div class="mt-4 text-center">
                            <button type="submit" class="btn btn-primary" id="guardarEdicion">Guardar cambios</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal de confirmación -->
        <div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="confirmModalLabel">Confirmar Acción</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        ¿Estás seguro de que deseas cambiar el estado de este cliente?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-primary" id="confirmActionBtn">Confirmar</button>
                    </div>
                </div>
            </div>
        </div>



    </main>
</div>

<script>
    $(document).ready(function () {
        $('#clientesTable').DataTable({
            "paging": true, // Paginación activada
            "searching": true, // Búsqueda activada
            "info": true, // Mostrar información de la tabla
            "ordering": true, // Habilitar ordenación de columnas
            "lengthChange": true, // Permitir cambiar el número de elementos por página
            "pageLength": 10, // Número de filas por página inicial
            "lengthMenu": [5, 10, 20, 50], // Opciones de páginas por elemento
            "dom": 'Bfrtip', // Colocar los botones de exportación en la parte superior
            "buttons": [
                'copy', 'csv', 'excel', 'pdf', 'print' // Botones de exportación
            ],  
            "language": {
                "sProcessing": "Procesando...",
                "sLengthMenu": "Mostrar _MENU_ registros",
                "sZeroRecords": "No se encontraron resultados",
                "sEmptyTable": "No hay datos disponibles en la tabla",
                "sInfo": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                "sSearch": "Buscar:",
                "oPaginate": {
                    "sFirst": "Primero",
                    "sPrevious": "Anterior",
                    "sNext": "Siguiente",
                    "sLast": "Último"
                },
                "oAria": {
                    "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                    "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                }
            }
        });
        // Llamar a la API para obtener los tipos de documentos
        $.ajax({
            url: '@Url.Action("ObtenerTiposDocumento", "Clientes")', // Acción del controlador para obtener tipos de documento
            type: 'GET',
            success: function (response) {
                if (response && response.length > 0) {
                    // Rellenar el select con los tipos de documento
                    var $select = $('#DNI');
                    $select.empty(); // Limpiar cualquier opción existente
                    $.each(response, function (index, item) {
                        $select.append('<option value="' + item.idDoc + '">' + item.descripcion + '</option>');
                    });
                } else {
                    alert("No se encontraron tipos de documento.");
                }
            },
            error: function () {
                alert("Error al obtener los tipos de documento.");
            }
        });

        // Manejo del envío del formulario mediante Ajax
        $("#guardarCliente").on("click", function (e) {
            e.preventDefault();

            // Obtención de datos del formulario
            var clienteCompleto = {
                cliente: {
                    nombres: $("#NOMBRES").val(),
                    apellidos: $("#APELLIDOS").val(),
                    idDoc: $("#DNI").val(), // Aquí debes obtener el idDoc (no el texto)
                    DocIdent: $("#DOCUMENTO_IDENTIDAD").val(),
                    fechaNacimiento: $("#FECHA_NACIMIENTO").val(),
                    nivelFidelidad: $("#NIVEL_FIDELIDAD").val(),
                    puntosFidelidad: $("#PUNTOS_FIDELIDAD").val()
                },
                contacto: {
                    telefono: $("#TELEFONO").val(),
                    direccion: $("#DIRECCION").val()
                },
                sistema: {
                    usuario: $("#USUARIO").val(),
                    email: $("#EMAIL").val(),
                    contrasenia: $("#CONTRASENIA").val()
                }
            };

            // Enviar datos al controlador usando Ajax
            $.ajax({
                url: '@Url.Action("GuardarCliente", "Clientes")',
                type: 'POST',
                contentType: 'application/json',  // Set content type to JSON
                data: JSON.stringify(clienteCompleto),  // Send data as JSON
                success: function (response) {
                    // Verificar si la respuesta es válida
                    if (response && response.success) {
                        $('#insertarModal').modal('hide');
                        location.reload();  // Recargar la página si se inserta correctamente
                    } else {
                        // Si la respuesta no tiene la propiedad success o es falsa
                        alert("Error al insertar el cliente. Respuesta del servidor no válida.");
                    }
                },
                error: function (xhr, status, error) {
                    // Manejo del error de la solicitud
                    console.error("Error al enviar la solicitud:", error);
                    alert("Error al enviar la solicitud al servidor.");
                }
            });
        });
    });
</script>


