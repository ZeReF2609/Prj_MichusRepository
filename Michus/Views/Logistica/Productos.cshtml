@model IEnumerable<Michus.Models.Producto>

@{
    ViewData["Title"] = "Productos";
}

<div class="container-fluid">
    <main class="py-2">

            <h1>Lista de Productos</h1>

            <button class="btn btn-success mb-3" data-toggle="modal" data-target="#agregarProductoModal">Agregar Producto</button>

            <table class="table">
                <thead>
                    <tr>
                        <th>Id Producto</th>
                        <th>Nombre Producto</th>
                        <th>Nombre Web</th>
                        <th>Descripción</th>
                        <th>Fecha Comercial</th>
                        <th>Precio</th>
                        <th>Estado</th>
                        <th>Id Categoria</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var producto in Model)
                        {
                            <tr>
                                <td>@producto.IdProducto</td>
                                <td>@producto.ProdNom</td>
                                <td>@producto.ProdNomweb</td>
                                <td>@producto.Descripcion</td>
                                <td>@producto.ProdFchcmrl?.ToString("dd/MM/yyyy")</td>
                                <td>@producto.Precio</td>
                                <td>@producto.Estado</td>
                                <td>@producto.IdCategoria</td>
                                <td>
                                    <button class="btn btn-primary" data-toggle="modal" data-target="#editarProductoModal" data-id="@producto.IdProducto">Editar</button>
                                    <button class="btn btn-danger" data-toggle="modal" data-target="#desactivarProductoModal" data-id="@producto.IdProducto">Desactivar</button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="text-center">No se encontraron productos.</td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Modal: Agregar Producto -->
            <div class="modal fade" id="agregarProductoModal" tabindex="-1" role="dialog" aria-labelledby="agregarProductoModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="agregarProductoModalLabel">Agregar Producto</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div id="modalAgregarContenido"></div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Modal: Editar Producto -->
            <div class="modal fade" id="editarProductoModal" tabindex="-1" role="dialog" aria-labelledby="editarProductoModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="editarProductoModalLabel">Editar Producto</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div id="modalEditarContenido"></div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Modal: Desactivar Producto -->
            <div class="modal fade" id="desactivarProductoModal" tabindex="-1" role="dialog" aria-labelledby="desactivarProductoModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="desactivarProductoModalLabel">Desactivar Producto</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div id="modalDesactivarContenido"></div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        </div>
                    </div>
                </div>
            </div>

            <script>
                $(document).ready(function () {
                    // modal agregar
                    $('#agregarProductoModal').on('show.bs.modal', function () {
                        $.get('/Logistica/AgregarProducto', function (contenido) {
                            $('#modalAgregarContenido').html(contenido);
                        });
                    });

                    // modal editar
                    $('#editarProductoModal').on('show.bs.modal', function (event) {
                        var button = $(event.relatedTarget);
                        var productId = button.data('id');

                        $.get('/Logistica/EditarProducto', { id: productId }, function (contenido) {
                            $('#modalEditarContenido').html(contenido);
                        });
                    });

                    // modal desactivar
                    $('#desactivarProductoModal').on('show.bs.modal', function (event) {
                        var button = $(event.relatedTarget);
                        var productId = button.data('id');

                        $.get('/Logistica/DesactivarProducto', { id: productId }, function (contenido) {
                            $('#modalDesactivarContenido').html(contenido);
                        });
                    });
                });
            </script>

    </main>
</div>

