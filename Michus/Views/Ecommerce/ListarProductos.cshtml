@model IEnumerable<Michus.Models.Producto>

@{
    Layout = "~/Views/Shared/layoutVentaEcommerce.cshtml";
    var categories = ViewBag.Categories as List<SelectListItem> ?? new List<SelectListItem>();

}

<!-- Filtro y carrito de compras -->
<div class="container my-4 d-flex justify-content-center align-items-center">
    <form asp-action="ListarProductos" method="get" class="d-flex align-items-center me-4">
        <select name="category" id="category" class="form-select me-2">
            <option value="">Select Category</option>
            @foreach (var category in categories)
            {
                <option value="@category.Value">@category.Text</option>
            }
        </select>
        <button type="submit" class="btn btn-success">Filter</button>
    </form>
    <button class="btn btn-primary" onclick="location.href='@Url.Action("Cart")'">Go to Cart</button>
</div>

<!-- Listado de productos centrado -->
<div class="container">
    <h2 class="text-center my-4">Our Products</h2>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 justify-content-center">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <!-- Título del producto -->
                        <h5 class="card-title text-center">@product.ProdNom</h5>

                      

                        <!-- Descripción -->
                        <p class="card-text text-muted">@product.Descripcion</p>

                        <!-- Precio y botón -->
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fw-bold">S/ @product.Precio</span>
                            <form asp-action="AddToCart" method="post">
                                <input type="hidden" name="productId" value="@product.IdProducto" />
                                <button type="submit" class="btn btn-primary btn-sm">Add to Cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Estilos y Scripts -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<style>
    .avatar-img {
        cursor: pointer;
    }

    .card {
        border-radius: 10px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: scale(1.03);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

    .card-title {
        font-size: 1.2rem;
        font-weight: bold;
    }

    .btn-primary, .btn-success {
        font-size: 0.85rem;
    }

    nav.navbar {
        padding: 0.5rem 1rem;
    }
</style>
