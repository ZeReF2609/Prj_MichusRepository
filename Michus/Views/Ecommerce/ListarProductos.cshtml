@model IEnumerable<Michus.Models.Producto>

@{
    Layout = "~/Views/Shared/layoutVentaEcommerce.cshtml";
    var categories = ViewBag.Categories as List<SelectListItem> ?? new List<SelectListItem>();
}

<div class="container-fluid">
    <div class="row">
        <!-- Menú lateral con categorías -->
        <aside class="col-md-3 bg-success text-white p-4" style="min-height: 100vh;">
            <h5 class="mb-4">Categories</h5>
            <ul class="list-unstyled">
                <!-- Enlace para mostrar todos los productos -->
                <li>
                    <a asp-action="ListarProductos" asp-route-category="" class="text-white text-decoration-none d-block py-2 border-bottom">Todos los productos</a>
                </li>
                @foreach (var category in categories)
                {
                    <li>
                        <a asp-action="ListarProductos" asp-route-category="@category.Value" class="text-white text-decoration-none d-block py-2 border-bottom">@category.Text</a>
                    </li>
                }
            </ul>
            <form asp-action="Cart" method="get">
                <button type="submit">Go to Cart</button>
            </form>
        </aside>

        <!-- Listado de productos -->
        <main class="col-md-9">
            <div class="container">
                <h2 class="text-center my-4">Our Products</h2>
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 justify-content-center">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var product in Model)
                        {
                            <div class="col">
                                <div class="card h-100 shadow-sm">
                                    <div class="card-body d-flex flex-column justify-content-between">
                                        <!-- Título del producto -->
                                        <h5 class="card-title text-center">@product.ProdNom</h5>

                                        <!-- Descripción -->
                                        <p class="card-text text-muted">@product.Descripcion</p>

                                        <!-- Precio y botón -->
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="fw-bold">S/ @product.Precio</span>
                                            <form asp-action="AddToCart" method="post">
                                                <input type="hidden" name="productId" value="@product.IdProducto" />
                                                <button type="submit" class="btn btn-primary btn-sm">Add to Cart</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-center">No products found in this category.</p>
                    }
                </div>
            </div>
        </main>
    </div>
</div>

<!-- Estilos adicionales -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<style>
    aside {
        position: sticky;
        top: 0;
    }

        aside a:hover {
            background-color: #145a32;
        }

    .card {
        border-radius: 10px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: scale(1.03);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }
</style>
