@model List<Michus.Models.Producto>
@{
    Layout = "~/Views/Shared/layoutVentaEcommerce.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<div class="container mt-5">
    <h2>Your Cart</h2>

    @if (Model.Count == 0)
    {
        <div class="alert alert-warning" role="alert">
            Your cart is empty.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4 mb-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@product.ProdNom</h5>
                            <p class="card-text">@product.Precio.ToString("C2")</p>
                            <form asp-action="RemoveFromCart" method="post">
                                <input type="hidden" name="productId" value="@product.IdProducto" />
                                <button type="submit" class="btn btn-danger btn-sm">Remove from Cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="mt-4">

            <a asp-action="Checkout" id="pago" class="btn btn-primary">Proceed to Checkout</a>
        </div>
    }
</div>
